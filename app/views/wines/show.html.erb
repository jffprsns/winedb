<% provide(:title, @wine.name) %>
<p id="notice"><%= notice %></p>
<div class="container">
  <aside class="span4">
    <section>
      <h1><%= @wine.name %></h1>
    </section>
  </aside>
</div>
<div class="container">
  <% if @wine.picture_file_name %>
    <%= image_tag @wine.picture.url(:medium) %>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Wine Details</h3>
    </div>
    <div class="panel-body">
      <p>
        <strong>Description:</strong>
        <% if @wine.description %>
          <%= @wine.description %>
        <% else %>
          Unspecified
        <% end %>
      </p>
      <p>
        <strong>Link:</strong>
        <%= link_to @wine.link, "#{@wine.link}" %>
      </p>
      <% if @wine.date_consumed %>
        <p>
          <strong>Date Consumed:</strong>
          <%= @wine.date_consumed.strftime("%d-%b-%Y") %>
        </p>
      <% end %>
      <% if @wine.country %>
        <p>
          <strong>Country:</strong>
          <%= @wine.country.name %>
        </p>
      <% end %>
      <% if @wine.region %>
        <p>
          <strong>Region:</strong>
          <%= @wine.region.name %>
        </p>
      <% end %>
      <% if @wine.appellation %>
        <p>
          <strong>Appellation:</strong>
          <%= @wine.appellation.name %>
        </p>
      <% end %>
      <% if @wine.vintage %>
        <p>
          <strong>Vintage:</strong>
          <%= @wine.vintage %>
        </p>
      <% end %>
      <p>
        <strong>Grapes:</strong>
          <% @wine.grapes.each do |grape| %>
            <%= grape.name %>,
          <% end %>
      </p>
    </div>
  </div>
</div>
  <% if signed_in? %>
    <%= button_to 'Edit Wine Details', edit_wine_path(@wine), method: :get, class: "btn btn-large btn-primary " %>
    <%= button_to "Delete Wine", @wine , method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger " %>
    <%= button_to 'Add to my list', new_consumed_wine_path, :method => "get", class: "btn btn-success" %>
  <% end %>
  </br>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Wine Reviews</h3>
  </div>

  <div class="panel-body">
    <table class="table table-condensed">
      <% @wine.reviews.each do |review| %>
        <% if review.id %>
          <tr><td>"<%= review.review %>"
            <% if review.user_id %>
              - <%= User.find(review.user_id).name %>
            <% else %>
              - Annon
            <% end %>
         </td></tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>